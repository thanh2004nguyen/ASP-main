@model IEnumerable<Group5.Models.EmployeePosition>

@{
    ViewData["Title"] = "Index";
}

@if (TempData.ContainsKey("message"))
{
    <div class="alert alert-success">
        @TempData["message"]
    </div>
}
@if (TempData.ContainsKey("success"))
{
    <div class="alert alert-success">
        @TempData["success"]
    </div>
}

@if (TempData.ContainsKey("error"))
{
    <div class="alert alert-danger">
        @TempData["error"]
    </div>
}
<p>
    <a class="btn btn-danger confirm" style="width:220px;height:45px;font-size:20px" asp-action="Create">Create New Position</a>
</p>
<div class="row" style="display:flex;justify-content:space-between;align-items:center">

    <table class="table table-cl" style="max-width:900px">

        <thead>
            <tr>
                <th class="active">
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th class="active">
                    @Html.DisplayNameFor(model => model.Position)
                </th>
        
                <th class="active">
                    @Html.DisplayNameFor(model => model.MaxAmountPerMonth)
                </th>
                <th class="active">
                    @Html.DisplayNameFor(model => model.Level)
                </th>
                <th class="active">Action</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
       
                <td>
                    @Html.DisplayFor(modelItem => item.MaxAmountPerMonth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Level)
                </td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-success">Update</a> ||
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
