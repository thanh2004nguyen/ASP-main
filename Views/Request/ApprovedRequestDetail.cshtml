                color: white;
                border-color: green;
            }


        .list-group-item.active {
            background: #ffc107;
        }
        /* end common class */
        .top-status ul {
            list-style: none;
            display: flex;
            justify-content: space-around;
            justify-content: center;
            flex-wrap: wrap;
            padding: 0;
            margin: 0;
        }

            .top-status ul li {
                width: 120px;
                height: 120px;
                border-radius: 50%;
                background: #fff;
                display: flex;
                justify-content: center;
                flex-direction: column;
                align-items: center;
                border: 8px solid #ddd;
                box-shadow: 1px 1px 10px 1px #ddd inset;
                margin: 10px 5px;
            }

                .top-status ul li.active {
