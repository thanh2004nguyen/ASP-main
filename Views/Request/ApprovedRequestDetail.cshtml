                    box-shadow: 1px 1px 20px 1px #ffc107 inset;
                }
        /* end top status */

        ul.timeline {
            list-style-type: none;
            position: relative;
        }

            ul.timeline:before {
                content: ' ';
                background: #d4d9df;
                display: inline-block;
                position: absolute;
                left: 29px;
                width: 2px;
                height: 100%;
                z-index: 400;
            }

            ul.timeline > li {
                margin: 20px 0;
                padding-left: 30px;
            }

                ul.timeline > li:before {
                    content: '\2713';
                    background: #fff;
                    display: inline-block;
                    position: absolute;
                    border-radius: 50%;
                    border: 0;
                    left: 5px;
                    width: 50px;
                    height: 50px;
                    z-index: 400;
                    text-align: center;
                    line-height: 50px;
                    color: #d4d9df;
                    font-size: 24px;
